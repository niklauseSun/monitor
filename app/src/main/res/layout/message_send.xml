<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <EditText
        android:id="@+id/login_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="visible" />

    <Button
        android:layout_marginTop="12dp"
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_input"
        android:text="登录" />

    <Button
        android:id="@+id/logout_button"
        android:layout_below="@+id/login_button"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登出" />

    <EditText
        android:id="@+id/channel_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logout_button"
        android:layout_marginTop="24dp"
        />

    <Button
        android:id="@+id/join_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/channel_input"
        android:layout_marginTop="12dp"
        android:text="加入频道" />

    <Button
        android:id="@+id/leave_channel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/join_channel"
        android:layout_marginTop="12dp"
        android:text="登出频道" />

    <EditText
        android:id="@+id/group_message_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/leave_channel"
        android:layout_marginTop="12dp"
        />

    <Button
        android:id="@+id/group_message_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_message_input"
        android:layout_marginTop="12dp"
        android:text="群发消息" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/group_message_send"
        android:layout_marginTop="12dp"
        android:id="@+id/peer_message"/>


    <Button
        android:id="@+id/peer_send_button"
        android:layout_width="wrap_content"
        android:layout_below="@+id/peer_message"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content"
        android:text="单独发送" />
</RelativeLayout>